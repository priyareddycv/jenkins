pipeline {
    agent any
        stages{
            stage ( 'TEST1' ) {
		        when {
                    branch 'master' 
                    }
					    steps { 
						    sh '''
							   echo "this is executed from TEST1 stage and branch is master"
							   cat README.md
				               '''
							  }
							}
            stage ( 'TEST2' ) {
		        when {
			        branch 'master'
				    }
					    steps {
				            sh '''
				                echo " this is executed from TEST2 stage and branch is master "
								cat README.md
				               '''
                            }
						}
                    } 
				}
